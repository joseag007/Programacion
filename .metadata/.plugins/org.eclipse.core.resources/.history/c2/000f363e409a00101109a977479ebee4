package operadoresBase;

import java.util.Scanner;

public class OperacionesDatosUsuario {

	public static void main(String[] args) {
		Scanner teclado = new Scanner(System.in);
		
		int dato1, dato3;
		double dato2;
		
		System.out.print("Introduzca un valor: ");
		dato1 = teclado.nextByte();
		
		System.out.print("Introduzca un segundo valor: ");
		dato2 = teclado.nextByte();
		
		System.out.print("Introduzca un tercer valor: ");
		dato3 = teclado.nextByte();
		
		double suma = dato1 + dato2;
		System.out.println("La suma es: " + suma);

		double resta = dato1 - dato2;
		System.out.println("la resta es: " + resta);
		
		double multiplicacion = dato1 * dato2;
		System.out.println("La multiplicación es: " + multiplicacion);
		
		double division = dato1 / dato2;
		System.out.println("La división es: " + division);
		
		int resto;
		resto = dato1 % dato3;
		System.out.println("El resto es: " + resto);
		
		
		boolean comparacion = dato1 != dato3;
		System.out.println(comparacion);
		
		boolean dato1Mayor10, dato2Mayor10, resultado;
		dato1Mayor10 = (dato1>10);
		dato2Mayor10 = (dato2>10);
		resultado = dato1Mayor10 || dato2Mayor10
		
	}

}
