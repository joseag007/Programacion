package ejercicio4;

import java.util.Scanner;

public class Ejercicio4 {
	public static void main(String[] args) {
		
		Scanner teclado = new Scanner(System.in);
		
		double valor;
		System.out.print("Introduzca un valor: ");
		valor = teclado.nextDouble(); // petición del valor
		
		// Aplicar la función ceil
		double ceilValue = Math.ceil(valor);
        System.out.println("Math.ceil(" + valor + ") = " + ceilValue);
        System.out.println("Math.ceil redondea el valor hacia el siguiente número entero más cercano.");
        
        // Aplicar la función floor
        double floorValue = Math.floor(valor);
        System.out.println("Math.floor(" + valor + ") = " + floorValue);
        System.out.println("Math.floor redondea el valor hacia el número entero más cercano hacia abajo.");
        
        // Aplicar la función Math.round
        long roundValue = Math.round(valor);
        System.out.println("Math.round(" + valor + ") = " + roundValue);
        System.out.println("Math.round redondea el valor al entero más cercano según las reglas de redondeo convencionales.");

	
	}
}
